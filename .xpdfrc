fontFile Helvetica-Oblique	/usr/local/share/ghostscript/9.27/Resource/Font/NimbusSans-Italic
fontFile Helvetica-Bold		/usr/local/share/ghostscript/9.27/Resource/Font/NimbusSans-Bold
fontFile Helvetica-BoldOblique	/usr/local/share/ghostscript/9.27/Resource/Font/NimbusSans-BoldItalic
fontFile Courier		/usr/local/share/ghostscript/9.27/Resource/Font/NimbusMonoPS-Regular
fontFile Courier-Oblique	/usr/local/share/ghostscript/9.27/Resource/Font/NimbusMonoPS-Italic
fontFile Courier-Bold		/usr/local/share/ghostscript/9.27/Resource/Font/NimbusMonoPS-Bold
